<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AgentListItem">
    </style>
    <style name="AgentListItemMainContainer">
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:paddingLeft">12dp</item>
    </style>
    <style name="AgentListItemMainLeft">
		<item name="android:background">@drawable/agent_box_clickable</item>
    </style>
    <style name="AgentListItemMainIcon">
		<item name="android:layout_width">48dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:paddingRight">8dp</item>
    </style>
	<style name="AgentListItemMainName">
		<item name="android:singleLine">true</item>
		<item name="android:textSize">@dimen/AgentListTitle</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:paddingLeft">12dp</item>
	</style>    
	<style name="AgentListSwitchContainer">
	    <item name="android:visibility">visible</item>
		<item name="android:clickable">true</item>
		<item name="android:layout_gravity">center_vertical</item>
	    <item name="android:paddingTop">4dp</item>
		<item name="android:paddingBottom">4dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
	</style>
	<style name="AgentListSwitch">
	    <item name="android:layout_height">25dp</item>
	    <item name="android:layout_width">25dp</item>
	</style>
	<style name="AgentListStatus">
		<item name="android:textColor">#333</item>
		<item name="android:textSize">@dimen/TextSizeSmall</item>
	</style>
	
</resources>
