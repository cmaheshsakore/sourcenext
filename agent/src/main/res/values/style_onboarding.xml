<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OnboardingBaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/onboarding_sub_text</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="OnboardingSolidButton" parent="OnboardingBaseButton">
        <item name="android:background">@drawable/onboarding_button_solid_clickable</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="OnboardingTransparentButton" parent="OnboardingBaseButton">
        <item name="android:background">@drawable/onboarding_transparent_clickable</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="OnboardingHollowButton" parent="OnboardingBaseButton">
        <item name="android:background">@drawable/onboarding_button_hollow</item>
        <item name="android:textColor">@color/onboarding_button</item>
    </style>

    <style name="OnboardingTitle">
        <item name="android:textColor">@color/onboarding_title</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="OnboardingTitleTwo">
        <item name="android:textColor">@color/onboarding_title</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="OnboardingHeading">
        <item name="android:textColor">@color/onboarding_sub_heading</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OnboardingText">
        <item name="android:textColor">@color/onboarding_sub_text</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="OnboardingSpacer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/onboarding_spacer</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>