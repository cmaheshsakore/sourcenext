<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingLeft="14dp" android:paddingRight="12dp"
    android:orientation="horizontal"
    android:paddingTop="2dp">
    <LinearLayout
        android:id="@+id/prefAnalyticsContainer"
        android:orientation="horizontal"
        style="@style/PreferenceContainerNoCheckbox"
        android:padding="0dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/transparent">

        <TextView
            android:id="@+id/wifiNetworkNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:clickable="true"
            android:singleLine="true"
            android:background="@drawable/item_default_clickable"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
        </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>