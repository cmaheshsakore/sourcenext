<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blocker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/agent_background_card"
        android:orientation="vertical"
        android:layout_margin="12dp" >

        <com.mobiroo.n.sourcenextcorporation.tagstand.util.TextViewRobotoLight
            android:id="@+id/blocker_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_default_clickable"
            android:clickable="false"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="30dp"
            android:textColor="#000"
            android:textSize="18sp" />
        <View android:layout_height="1dp" android:layout_width="match_parent" android:background="#ccc" />
    </LinearLayout>

</LinearLayout>