<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<com.mobiroo.n.sourcenextcorporation.tagstand.util.TextViewRobotoLight
    android:id="@+id/text" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="4dp"
    android:textColor="#ccc"
    android:textSize="24sp"
    android:background="#002B5E"
    />

    <View android:layout_width="fill_parent"
		android:layout_height="1dp" android:background="#222" />
	<View android:layout_width="fill_parent"
		android:layout_height="1dp" android:background="#444" />
	<View android:layout_width="fill_parent"
		android:layout_height="1dp" android:background="#666" />
	<View android:layout_width="fill_parent"
		android:layout_height="1dp" android:background="#888" />
		<View android:layout_width="fill_parent"
		android:layout_height="1dp" android:background="#aaa" />
		
</LinearLayout>