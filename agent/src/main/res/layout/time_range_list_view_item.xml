<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="fill_parent"
	android:orientation="horizontal" android:paddingTop="8dp"
    android:paddingLeft="8dp" android:paddingRight="8dp" android:background="#ccc">

	<LinearLayout android:id="@+id/edit_range" android:background="@drawable/item_default_clickable" android:padding="12dp"
	    android:minHeight="48dp" android:layout_width="0dip" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="horizontal">

		<com.mobiroo.n.sourcenextcorporation.tagstand.util.TextViewRobotoLight
			android:id="@+id/range_start_value" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:singleLine="true" android:paddingRight="6dp" android:paddingLeft="6dp"
			android:textColor="#000" android:textSize="15sp" android:layout_gravity="center_vertical"/>

		<ImageView android:layout_width="20dp"
			android:layout_height="20dp" android:padding="4dp"
			android:src="@drawable/ic_right_arrow" android:layout_gravity="center_vertical"/>

		<com.mobiroo.n.sourcenextcorporation.tagstand.util.TextViewRobotoLight
			android:id="@+id/range_end_value" android:layout_width="wrap_content"
			android:layout_height="wrap_content"  android:paddingRight="6dp" android:paddingLeft="6dp"
			android:singleLine="true" android:textColor="#000" android:textSize="15sp" android:layout_gravity="center_vertical" />

	</LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#ccc"/>


    <ImageView android:id="@+id/delete_icon"
		android:layout_width="48dp" android:padding="16dp"
		android:layout_height="fill_parent" android:src="@drawable/ic_x"
		android:clickable="true" android:background="@drawable/item_default_clickable"
		android:gravity="center"/>

</LinearLayout>